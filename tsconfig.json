{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "node16",

    "rootDir": "./src",
    "outDir": "./dist",

    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "sourceMap": true,
    "resolveJsonModule": true,
    "types": ["node"],

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "ignoreDeprecations": "5.0"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
